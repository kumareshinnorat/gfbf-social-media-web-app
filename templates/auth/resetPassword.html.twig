{% extends 'base.html.twig' %}

{% block title %}Reset Password
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{asset('css/style.css')}}">
{% endblock %}

{% block body %}
	<div id="loader"></div>

	<div class="d-flex align-items-center justify-content-center container vh-100">
		<div class="col-sm-4 shadow-lg p-3 bg-white rounded-xl card">
			<div class="logo">
				<img src="./img/appLogo.png" height="60" width="60" alt="logo" srcset="">
				<h4>GFBF</h4>
			</div>
			<hr/>
			<div class="register">
				<h4>Forget Password</h4>
			</div>
			<hr/>
			<form action="/resetPassword" id="resetPasswordForm" method="POST">
				<div class="inputText">

					<input class="form-control shadow-sm passInput" id="password" placeholder="Password" name="password1" type="password" required/>
					<span id="errorPassword" class="error"></span>

					<input class="form-control shadow-sm passInput" id="password2" placeholder="Re type Password" name="password2" type="password" required/>
					<span id="errorPassword2" class="error"></span>

				</div>
				<hr/>
        <div class="submitBtns">
					<input class="form-control shadow-sm submitBtn" id="submit" type="submit" value="Reset"/>
        </div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}

{% block js %}
	{{ parent() }}
	<script src="{{asset('js/ResetScript.js')}}"></script>
	<script src="{{asset('js/methods.js')}}"></script>
  
{% endblock %}
