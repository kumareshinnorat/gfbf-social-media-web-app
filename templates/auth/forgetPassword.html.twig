{% extends 'base.html.twig' %}

{% block title %}Forget Password
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{asset('css/style.css')}}">
{% endblock %}

{% block body %}
	<div id="loader"></div>

	<div class="d-flex align-items-center justify-content-center container vh-100">
		<div class="col-sm-4 shadow-lg p-3 bg-white rounded-xl card">
			<div class="logo">
				<img src="./img/appLogo.png" height="60" width="60" alt="logo" srcset="">
				<h4>GFBF</h4>
			</div>
			<hr/>
			<div class="register">
				<h4>Forget Password</h4>
			</div>
			<hr/>
			<form action="/forgetPassword" id="loginForm" class="forgetPasswordForm" method="post">
				<div class="inputText">

					<input class="form-control shadow-sm" id="email" placeholder="Email" name="email" type="email" required/>
					<span id="errorEmail" class="error"></span>

				</div>
				<hr/>
				{% if msg is defined %}
					<span id="msg">{{msg}}</span>
				{% endif %}
				<div class="buttons">
					<a href="/login" class="form-control shadow-sm forgetPassword">Login</a>
					<input class="form-control shadow-sm submitBtn" id="submit" type="submit" name="submit" value="Submit"/>
				</form>
			</div>
		</div>
	</div>
{% endblock %}

{% block js %}
	{{ parent() }}
	<script src="{{asset('js/forgetPasswordScript.js')}}"></script>
	<script src="{{asset('js/methods.js')}}"></script>
{% endblock %}
