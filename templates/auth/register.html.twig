{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block stylesheets %}
	{{ parent() }}
	<link rel="stylesheet" href="{{asset('css/style.css')}}">
{% endblock %}

{% block body %}
	<div id="loader"></div>

	<div class="d-flex align-items-center justify-content-center container vh-100">
		<div class="col-sm-4 shadow-lg p-3 bg-white rounded-xl card">
			<div class="logo">
				<img src="./img/appLogo.png" height="60" width="60" alt="logo" srcset="">
				<h4>GFBF</h4>
			</div>
			<hr/>

			<div class="otpFormBox">
				<div class="register">
					<h4>OTP</h4>
				</div>
				<hr/>
				<div id="otp">
					<form action="/otp" id="otpForm" method="POST" class="mb-3">

						<input class="otp" name="1" type="text" oninput='digitValidate(this)' onkeyup='tabChange(1)' maxlength="1" required>
						<input class="otp" name="2" type="text" oninput='digitValidate(this)' onkeyup='tabChange(2)' maxlength="1" required>
						<input class="otp" name="3" type="text" oninput='digitValidate(this)' onkeyup='tabChange(3)' maxlength="1" required>
						<input class="otp" name="4" type="text" oninput='digitValidate(this)' onkeyup='tabChange(4)' maxlength="1" required>
					</form>
					<span id="otpServerError" class="error"></span>
					<button type="submit" id="otpBtn" value="Submit" form="otpForm" class='btn btn-primary btn-block mb-4 customBtn'>Verify</button>
					<span id="otpTimer" class="timer"></span>
					<button id="resendOTP" class="customBtn" onclick="resendOTP()" disabled>Resend OTP</button>
				</div>
			</div>

			<div class="registerFormBox">
				<div class="register">
					<h4>Register</h4>
				</div>
				<hr/>
				<form action="/register" method="post" id="register-form" enctype="multipart/form-data">
					<div class="inputText">

						<div class="dp">
							<img class="profile-pic" src="./img/dp2.png">
							<span id="add-icon" class="profile-pic">+</span>
						</div>

						<input class="file-upload" name="image" type="file" accept="image/*"/>
						<span id="registerServerError" class="error"></span>

						<input class="form-control shadow-sm" id="fullName" placeholder="Full name" name="fullName" type="text" required/>
						<span id="errorFullName" class="error"></span>

						<input class="form-control shadow-sm" id="email" placeholder="Email" name="email" type="email" required/>
						<span id="errorEmail" class="error"></span>

						<input class="form-control shadow-sm passInput" id="password" placeholder="Password" name="password" type="password" required/>
						<span id="errorPassword" class="error"></span>
						<div class="gender">
							<div class="male">
								<input type="radio" name="gender" id="male" value="M" required>
								<label for="male">Male</label>
							</div>
							<div class="female">
								<input type="radio" name="gender" id="female" value="F" required>
								<label for="female">Female</label>
							</div>
							<div class="others">
								<input type="radio" name="gender" id="others" value="O" required>
								<label for="others">Others</label>
							</div>
						</div>

					</div>
					<hr/>
					<div class="buttons">
						<a href="/login" class="form-control shadow-sm login">Back</a>
						<input class="form-control shadow-sm submitBtn" id="submit" type="submit" name="submit" value="Register"/>
					</form>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

{% block js %}
	{{ parent() }}
	<script src="{{asset('js/RegisterScript.js')}}"></script>
	<script src="{{asset('js/methods.js')}}"></script>
{% endblock %}
